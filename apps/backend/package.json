{
    "name": "@aloha/backend",
    "version": "1.0.0",
    "description": "Backend API for Aloha project using Fastify + tRPC + Zod + MongoDB",
    "main": "dist/index.js",
    "scripts": {
        "dev": "tsx watch -r dotenv/config src/index.ts",
        "build": "tsc",
        "start": "node -r dotenv/config dist/index.js",
        "test": "jest --passWithNoTests",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "lint": "eslint src --ext .ts",
        "lint:fix": "eslint src --ext .ts --fix",
        "format": "prettier --write src/**/*.ts",
        "type-check": "tsc --noEmit",
        "clean": "rm -rf dist"
    },
    "dependencies": {
        "fastify": "^4.26.0",
        "@trpc/server": "^10.45.0",
        "@trpc/client": "^10.45.0",
        "zod": "^3.22.4",
        "mongoose": "^8.1.0",
        "jsonwebtoken": "^9.0.2",
        "bcryptjs": "^2.4.3",
        "dotenv": "^16.3.1",
        "pino": "^8.17.2",
        "@fastify/cors": "^9.0.1",
        "@fastify/rate-limit": "^9.1.0",
        "@types/node": "^20.10.5",
        "@types/jsonwebtoken": "^9.0.5",
        "@types/bcryptjs": "^2.4.6"
    },
    "devDependencies": {
        "typescript": "^5.3.3",
        "nodemon": "^3.0.2",
        "ts-node": "^10.9.2",
        "tsx": "^4.6.2",
        "concurrently": "^8.2.2",
        "jest": "^29.7.0",
        "@types/jest": "^29.5.8",
        "supertest": "^6.3.3",
        "@types/supertest": "^6.0.2"
    },
    "keywords": [
        "fastify",
        "trpc",
        "zod",
        "mongodb",
        "backend"
    ],
    "author": "Aloha Team",
    "license": "MIT"
}
