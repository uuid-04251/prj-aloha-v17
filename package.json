{
    "name": "aloha-monorepo",
    "version": "1.0.0",
    "private": true,
    "type": "module",
    "workspaces": [
        "apps/*"
    ],
    "scripts": {
        "dev": "pnpm --filter admin dev",
        "build": "pnpm --filter admin build",
        "start": "pnpm --filter admin start",
        "lint": "pnpm --filter admin lint",
        "format": "pnpm --filter admin format",
        "type-check": "pnpm --filter admin exec tsc --noEmit",
        "test": "pnpm --filter admin test",
        "test:watch": "pnpm --filter admin test:watch",
        "test:coverage": "pnpm --filter admin test:coverage",
        "test:ci": "pnpm lint && pnpm type-check && pnpm test && pnpm build && pnpm audit --audit-level moderate",
        "prepare": "husky"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.3.3",
        "@eslint/js": "^9.39.2",
        "@typescript-eslint/parser": "^8.54.0",
        "eslint": "^9.39.2",
        "eslint-config-next": "16.1.6",
        "eslint-plugin-react": "^7.37.5",
        "globals": "^17.2.0",
        "husky": "^9.1.7",
        "prettier": "^3.8.1",
        "typescript": "5.9.3"
    }
}
